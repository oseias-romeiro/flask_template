{% extends "base.jinja2" %}

{% block content %}
    <h2 class="m-5">
        {% block title %}Admin Panel{% endblock %}
    </h2>

    <br>
    <table class="table table-dark">
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
        {% for u in users %}
            <tr>
                <td>{{ u.id }}</td>
                <td>{{ u.username }}</td>
                <td>{{ u.role }}</td>
                <td>
                    <a href="{{ url_for('account_app.delete_user', username=u.username) }}" class="btn btn-secondary text-white">&times;</button>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
