{% extends "base.jinja2" %}

{% block content %}
    <h2>{% block title %}Edit{% endblock %} profile</h2>
    <br>
    <form method="post" autocomplete="off">
        {{ form.csrf_token }}

        {{ form.username.label }}<br>
        {{ form.username }}<br>

        {{ form.email.label }}<br>
        {{ form.email }}<br>

        {{ form.password.label }}<br>
        {{ form.password }}<br>

        {{ form.confirm.label }}<br>
        {{ form.confirm }}<br>
        <br>
        <button class="btn btn-dark" type="submit">Edit</button>
        <a href="/account/home">
            <button class="btn btn-secondary" type="button" class="btn-cancel">Cancel</button>
        </a>
    </form>

{% endblock %}
