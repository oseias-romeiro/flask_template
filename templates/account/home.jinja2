{% extends "base.jinja2" %}

{% block content %}
    <h2 class="m-5">
        {% block title %}Wellcome{% endblock %}, {{ current_user.username }}.
    </h2>

    <div class="mb-5">
        <a href="{{ url_for('account_app.log_out') }}" class="btn btn-outline-dark">Logout</a>
        <a href="{{ url_for('account_app.profile_view') }}" class="btn btn-outline-dark">Profile</a>
        {% if current_user.role == role.ADMIN %}
            <a href="{{ url_for('admin_app.panel') }}" class="btn btn-outline-dark">Admin Panel</a>
        {% endif %}
    </div>
    

{% endblock %}
